class Foo
  extend Wirer::Factory::ClassDSL

  dependency :logger, Logger
  setter_dependency :foo, Foo   # defines private #foo=
  
  def initialize(dependencies)
  end
end

container.add FooFactory

# adds FooFactory, wrapped as providing another feature :foo 
container.add :foo, FooFactory

# adds FooFactory, wrapped as providing another feature :foo, called with some extra initial args, and with an extra specifier added to one of its dependencies 
container.add FooFactory, extra, args, :dependency_arg => :extra_feature

